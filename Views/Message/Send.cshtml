@model AgriEnergyConnect.Models.ViewModels.MessageViewModel
@{
    ViewData["Title"] = "Send Message";
    Layout = "_EmployeeLayout";
}

<div class="dashboard-content">
    <div class="page-header">
        <div class="title-section">
            <h1>Send Message</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Employee")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Inbox", "Message")">Messages</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Compose</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Compose New Message</h5>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Send" asp-controller="Message" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Recipient</label>
                    <select name="recipientId" class="form-select" required>
                        <option value="">Select recipient...</option>
                        @foreach (var farmer in ViewBag.Farmers)
                        {
                            <option value="@farmer.User.UserId">@farmer.User.FirstName @farmer.User.LastName (@farmer.FarmName)</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input type="text" name="subject" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea name="content" class="form-control" rows="8" required></textarea>
                </div>

                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("Inbox", "Message")" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-paper-plane me-2"></i> Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-select, .form-control {
        border-color: #e0e0e0;
    }

        .form-select:focus, .form-control:focus {
            border-color: #00897B;
            box-shadow: 0 0 0 0.2rem rgba(0, 137, 123, 0.25);
        }

    textarea {
        resize: vertical;
        min-height: 150px;
    }

    .btn-primary {
        background-color: #00897B;
        border-color: #00897B;
    }

        .btn-primary:hover {
            background-color: #00796B;
            border-color: #00796B;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Auto focus on recipient dropdown
            $('select[name="recipientId"]').focus();
        });
    </script>
}