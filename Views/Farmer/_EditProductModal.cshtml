@model AgriEnergyConnect.Models.ViewModels.ProductViewModel
@using AgriEnergyConnect.Helpers

<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="EditProduct" method="post" id="editProductForm">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="editProductLabel">Edit Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" asp-for="ProductId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <div class="input-with-icon">
                                <span class="input-icon">T</span>
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Category" class="form-label"></label>
                            <div class="input-with-icon">
                                <span class="input-icon">≡</span>
                                <select asp-for="Category" class="form-select">
                                    <option value="">Select category</option>
                                    @foreach (var category in CategoryHelper.Categories)
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ProductionDate" class="form-label"></label>
                            <div class="input-with-icon">
                                <span class="input-icon">📅</span>
                                <input asp-for="ProductionDate" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Description" class="form-label"></label>
                            <div class="input-with-icon">
                                <span class="input-icon">✎</span>
                                <input asp-for="Description" class="form-control" />
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Update Product</button>
                </div>
            </form>
        </div>
    </div>
</div>